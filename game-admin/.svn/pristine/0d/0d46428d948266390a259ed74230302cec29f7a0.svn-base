	   	 }
}
//强化槽位置 
function strengthenSlot(){
	$('#dlgaddGoods').dialog({
     	onLoad:function(){
    		//$('#fmaddgood').form('clear');
   		 },
    href:'<%=request.getContextPath()%>/views/good/strengthenSlot.jsp?heroId=<%=request.getParameter("heroId")%>',
    modal: true,
    closed: true});
	$('#dlgaddGoods').dialog('open');
